{
  "max_size_in_megabytes": 10,
  "local_storage_path": "/var/lib/cam-stream-recorder",
  "storage_providers": [
    {
      "provider": "aws",
      "region": "us-east-1",
      "bucket": "cam-stream-recorder",
      "path": "recorder/"
    }
  ],
  "recorders": [
    {
      "name": "Front Door",
      "location": "indoor",
      "video_decoder": "h264",
      "rtsp": "rtsp://localhost:8554/mystream",
      "storage_providers": ["aws"]
    },
    {
      "name": "Back Yard",
      "location": "outdoor",
      "video_decoder": "h264",
      "rtsp": "rtsp://localhost:8554/mystream",
      "storage_providers": ["aws"]
    }
  ]
}
